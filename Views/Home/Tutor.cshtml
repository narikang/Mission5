
<div class="text-center">

@{
    ViewData["Title"] = "Tutoring Calculator";
}

<h2>Tutoring Calculator</h2>

<div>
    <label for="hours">Number of Hours:</label>
    <input type="number" id="hours" min="1" required>
</div>

<div>
    <label for="rate">Hourly Rate ($):</label>
    <input type="text" id="rate" value="50" readonly>
</div>

<div>
    <label for="total">Total Cost ($):</label>
    <input type="text" id="total" readonly>
</div>

<button id="calculate">Calculate Total</button>

<div><a href="/">Back to Home</a></div>

@section Scripts {
    <script src="~/js/tutoringCalculator.js"></script>
}
</div>